<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/tasks/edit/{{task._id}}" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="title" value="{{task.title}}" placeholder="Escreva o título">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" value="{{task.description}}" placeholder="Escreva a descrição">
                    </div>
                    <button type="submit" class="btn btn-success btn-block">
                        Salvar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>